<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "Premium Car Shop" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <% if notice %>
      <p class="alert alert-success"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" rel="stylesheet">
    <!-- Custom styles -->
    <style>
      body {
        background-color: #f8f9fa;
      }
      .navbar {
        box-shadow: 0 2px 4px rgba(0,0,0,.1);
        background-color: white !important;
      }
      .nav-user-section {
        margin-right: 15px;
      }
      .card {
        transition: transform 0.2s;
        box-shadow: 0 2px 4px rgba(0,0,0,.05);
      }
      .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 4px 8px rgba(0,0,0,.1);
      }
      .cart-badge {
        position: relative;
        top: -8px;
      }
      .btn-primary {
        background-color: #0d6efd;
        border-color: #0d6efd;
      }
      .btn-primary:hover {
        background-color: #0b5ed7;
        border-color: #0a58ca;
      }
      .price-tag {
        color: #198754;
        font-weight: bold;
      }
      #userDropdown {
        padding: 8px;
        border-radius: 50%;
        transition: background-color 0.2s;
      }
      #userDropdown:hover {
        background-color: rgba(0, 0, 0, 0.05);
      }
      .dropdown-menu {
        min-width: 200px;
        padding: 0.5rem 0;
        margin-top: 0.5rem;
        box-shadow: 0 2px 10px rgba(0,0,0,.1);
      }
      .dropdown-item {
        padding: 0.5rem 1rem;
      }
      .dropdown-item:active {
        background-color: #0d6efd;
      }
    </style>

    <%= stylesheet_link_tag :app, "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <!-- Load Bootstrap JavaScript at the start of body -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"></script>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top mb-5">
      <div class="container">
        <%= link_to root_path, class: "navbar-brand d-flex align-items-center" do %>
          <i class="fas fa-car-side me-2"></i>
          Premium Cars
        <% end %>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <%= link_to cars_path, class: "nav-link #{'active' if controller_name == 'cars' && action_name == 'index'}" do %>
                <i class="fas fa-search me-1"></i> Browse Cars
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to cart_path, class: "nav-link position-relative #{'active' if controller_name == 'carts'}" do %>
                <i class="fas fa-shopping-cart me-1"></i> Cart
                <% if @cart && @cart.cart_items.any? %>
                  <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger cart-badge">
                    <%= @cart.cart_items.count %>
                  </span>
                <% end %>
              <% end %>
            </li>
            <li class="nav-item dropdown ms-3" data-controller="dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" data-bs-auto-close="true" aria-expanded="false">
                <i class="fas fa-user fa-lg"></i>
              </a>
              <ul class="dropdown-menu dropdown-menu-end shadow" aria-labelledby="userDropdown">
                <% if user_signed_in? %>
                  <li><span class="dropdown-item-text text-muted"><%= current_user.email %></span></li>
                  <li><hr class="dropdown-divider"></li>
                  <li>
                    <%= link_to edit_user_registration_path, class: "dropdown-item" do %>
                      <i class="fas fa-user-edit me-2"></i>Edit Profile
                    <% end %>
                  </li>
                  <li>
                    <%= link_to destroy_user_session_path, data: { turbo_method: :delete }, class: "dropdown-item text-danger" do %>
                      <i class="fas fa-sign-out-alt me-2"></i>Sign Out
                    <% end %>
                  </li>
                <% else %>
                  <li>
                    <%= link_to new_user_session_path, class: "dropdown-item" do %>
                      <i class="fas fa-sign-in-alt me-2"></i>Login
                    <% end %>
                  </li>
                  <li>
                    <%= link_to new_user_registration_path, class: "dropdown-item" do %>
                      <i class="fas fa-user-plus me-2"></i>Sign Up
                    <% end %>
                  </li>
                <% end %>
              </ul>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <!-- Initialize dropdowns -->
    <script>
      document.addEventListener('DOMContentLoaded', function() {
        var dropdownElementList = [].slice.call(document.querySelectorAll('.dropdown-toggle'));
        var dropdownList = dropdownElementList.map(function (dropdownToggleEl) {
          return new bootstrap.Dropdown(dropdownToggleEl);
        });
      });
    </script>

    <!-- Main Content -->
    <div class="container" style="margin-top: 80px;">
      <% if notice %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
          <%= notice.html_safe %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% end %>

      <% if alert %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <%= alert %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% end %>

      <%= yield %>
    </div>

    <!-- Footer -->
    <footer class="bg-light mt-5 py-4">
      <div class="container">
        <div class="row">
          <div class="col-md-6">
            <h5><i class="fas fa-car-side me-2"></i>Premium Cars</h5>
            <p class="text-muted">Find your perfect car from our extensive collection.</p>
          </div>
          <div class="col-md-6 text-end">
            <p class="text-muted">&copy; <%= Time.current.year %> Premium Cars. All rights reserved.</p>
          </div>
        </div>
      </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
