<div id="<%= dom_id car %>" style="text-align: center;">
  <% if car.image_url.present? %>
    <img src="<%= car.image_url %>" alt="<%= car.make %> <%= car.model %>" style="max-width: 100%; max-height: 180px; object-fit: cover; border-radius: 4px; margin-bottom: 12px;" />
  <% else %>
    <div style="width: 100%; height: 180px; background: #eee; display: flex; align-items: center; justify-content: center; color: #aaa; border-radius: 4px; margin-bottom: 12px;">No Image</div>
  <% end %>
  <h2 style="margin: 0 0 8px 0; font-size: 1.2em;"><%= car.make %> <%= car.model %> (<%= car.year %>)</h2>
  <div style="font-size: 1.3em; color: #2a7; font-weight: bold; margin-bottom: 8px;">$<%= number_with_precision(car.price, precision: 2, delimiter: ',') %></div>
  <p style="font-size: 0.95em; color: #555; min-height: 48px;"><%= truncate(car.description, length: 80) %></p>
</div>
