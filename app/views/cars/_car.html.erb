<div id="<%= dom_id car %>" style="text-align: center;">
  <% if car.image_url.present? %>
    <img src="<%= car.image_url %>" alt="<%= car.make %> <%= car.model %>" style="width: 100%; height: 200px; object-fit: cover; border-radius: 8px; margin-bottom: 12px;" />
  <% end %>

  <h3 style="margin: 0 0 8px 0; font-size: 1.1em; font-weight: 600;">
    <%= car.year %> <%= car.make %> <%= car.model %>
  </h3>

  <div style="font-size: 1.2em; color: #198754; font-weight: bold;">
    $<%= number_with_delimiter(car.price) %>
  </div>

  <div style="height: 4.8em; overflow: hidden; text-overflow: ellipsis; display: -webkit-box; -webkit-line-clamp: 3; -webkit-box-orient: vertical; font-size: 0.9em; color: #666; margin-top: 8px; text-align: left;">
    <%= car.description %>
  </div>
</div>
