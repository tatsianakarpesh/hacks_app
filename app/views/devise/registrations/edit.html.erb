<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
      <div class="card shadow">
        <div class="card-body">
          <h2 class="card-title text-center mb-4">Edit Profile</h2>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, multipart: true }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="text-center mb-4">
              <% if resource.avatar_display %>
                <%= image_tag resource.avatar_display, class: "rounded-circle mb-2", style: "width: 150px; height: 150px; object-fit: cover;" %>
              <% else %>
                <div class="<%= resource.avatar_fallback_class %> large mb-2">
                  <%= resource.avatar_fallback_content %>
                </div>
              <% end %>
            </div>

            <div class="mb-3">
              <%= f.label :avatar, "Profile Picture (optional)", class: "form-label" %>
              <%= f.file_field :avatar, class: "form-control", accept: "image/png,image/jpeg,image/jpg" %>
              <div class="form-text">
                Optional. Upload PNG, JPEG, or JPG (max. 5MB)
                <% if resource.has_custom_avatar? %>
                  <br>Leave blank to keep current picture
                <% end %>
              </div>
            </div>

            <div class="row">
              <div class="col-md-6 mb-3">
                <%= f.label :first_name, class: "form-label" %>
                <%= f.text_field :first_name, class: "form-control" %>
              </div>

              <div class="col-md-6 mb-3">
                <%= f.label :last_name, class: "form-label" %>
                <%= f.text_field :last_name, class: "form-control" %>
              </div>
            </div>

            <div class="mb-3">
              <%= f.label :phone_number, class: "form-label" %>
              <%= f.telephone_field :phone_number, class: "form-control", placeholder: "+1234567890" %>
            </div>

            <div class="mb-3">
              <%= f.label :email, class: "form-label" %>
              <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
            </div>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div class="alert alert-info">
                Currently waiting confirmation for: <%= resource.unconfirmed_email %>
              </div>
            <% end %>

            <div class="mb-4">
              <%= f.label :current_password, class: "form-label d-flex justify-content-between align-items-center" do %>
                Current Password
                <small class="text-muted">(required to confirm changes)</small>
              <% end %>
              <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
            </div>

            <div class="d-grid gap-2">
              <%= f.submit "Update Profile", class: "btn btn-primary w-100 mb-3" %>
              <%= link_to "Back to Profile", user_profile_path, class: "btn btn-outline-secondary w-100" %>
            </div>
          <% end %>

          <hr class="my-4">

          <div class="text-center">
            <h5 class="text-danger mb-3">Delete Account</h5>
            <%= button_to registration_path(resource_name),
                data: { turbo_confirm: "Are you sure you want to delete your account? This action cannot be undone." },
                method: :delete,
                class: "btn btn-outline-danger mb-3" do %>
              <i class="fas fa-trash-alt me-2"></i>Delete my account
            <% end %>
            <%= link_to :back, class: "btn btn-link" do %>
              <i class="fas fa-arrow-left me-1"></i>Back
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
