<div class="notice-wrapper" style="margin-bottom: 20px;">
  <% if notice %>
    <div class="alert alert-success" style="padding: 12px; border-radius: 4px; background-color: #d4edda; border: 1px solid #c3e6cb; color: #155724;">
      <%= notice.html_safe %>
    </div>
  <% end %>
  <% if alert %>
    <div class="alert alert-danger" style="padding: 12px; border-radius: 4px; background-color: #f8d7da; border: 1px solid #f5c6cb; color: #721c24;">
      <%= alert %>
    </div>
  <% end %>
</div>

<div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 24px;">
  <h1>Your Cart</h1>
  <% if @cart_items.any? %>
    <div>
      <%= button_to 'Clear Cart', clear_cart_path,
          method: :delete,
          class: 'btn btn-danger',
          data: { confirm: 'Are you sure you want to clear your cart? You can undo this action immediately after clearing.' },
          style: 'padding: 8px 16px;' %>
    </div>
  <% end %>
</div>

<% if @cart_items.any? %>
  <div style="margin-bottom: 20px;">
    <h4 style="margin: 0;">Items in cart: <%= @cart_items.count %></h4>
  </div>

  <table style="width: 100%; border-collapse: collapse; margin-bottom: 24px;">
    <thead>
      <tr style="background: #f0f0f0;">
        <th style="padding: 8px; text-align: left;">Car</th>
        <th style="padding: 8px; text-align: left;">Year</th>
        <th style="padding: 8px; text-align: left;">Price</th>
        <th style="padding: 8px; text-align: left;">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% total = 0 %>
      <% @cart_items.each do |item| %>
        <% car = item.car %>
        <% total += car.price %>
        <tr>
          <td style="padding: 8px;">
            <% if car.image_url.present? %>
              <img src="<%= car.image_url %>" alt="<%= car.make %> <%= car.model %>" style="height: 48px; vertical-align: middle; margin-right: 8px; border-radius: 4px;" />
            <% end %>
            <%= car.make %> <%= car.model %>
          </td>
          <td style="padding: 8px;"><%= car.year %></td>
          <td style="padding: 8px; color: #2a7; font-weight: bold;">$<%= number_with_precision(car.price, precision: 2, delimiter: ',') %></td>
          <td style="padding: 8px;">
            <%= button_to 'Remove', cart_item_path(item), method: :delete, data: { confirm: 'Remove this car from your cart?' }, class: 'btn btn-danger', style: 'margin-bottom: 4px;' %><br>
            <%= button_to 'Save for Later', '#', method: :get, class: 'btn btn-secondary', disabled: true, style: 'margin-top: 4px;' %>
          </td>
        </tr>
      <% end %>
    </tbody>
    <tfoot>
      <tr style="background: #f8f8f8; font-weight: bold;">
        <td colspan="2" style="padding: 8px; text-align: right;">Total:</td>
        <td style="padding: 8px; color: #2a7;">$<%= number_with_precision(total, precision: 2, delimiter: ',') %></td>
        <td></td>
      </tr>
    </tfoot>
  </table>
  <div style="margin-top: 16px;">
    <%= button_to 'Buy', '#', method: :get, class: 'btn btn-success', style: 'padding: 12px 24px; font-size: 1.1em;' %>
  </div>
<% else %>
  <p>Your cart is empty.</p>
<% end %>
